.fl_left
  float left
  margin 0 20px 20px 0
  
.fl_right
  float right
  margin 0 0 20px 20px

.disabled 
  visibility hidden

input 
  box-sizing: border-box;


input, select, textarea 
  font: $f-size $f-base;


input[type='text'],
input[type='password'],
input[type='date'],
input[type='datetime'],
input[type='datetime-local'],
input[type='month'],
input[type='week'],
input[type='email'],
input[type='number'],
input[type='search'],
input[type='tel'],
input[type='time'],
input[type='url'],
select,
textarea 
  -webkit-appearance: none;
  box-sizing border-box
  border: 1px solid transparent;
  display: inline-block;
  width: 100%;
  padding: 10px 15px;
  background-color #d4f8ff 
  font-size 12px
  border-radius 10px 
  color #3ca1be
  transition 0.3s all
  &:focus 
    outline: none;
    border-color: #d9eff4
    background-color #EFFCFF 
    
input::-moz-focus-inner {
  border: 0;
}

input, textarea
  &::-webkit-input-placeholder
    color: $c-placeholder
    opacity 1
input, textarea    
  &:-moz-placeholder
    color: $c-placeholder
    opacity 1
input, textarea 
  &::-moz-placeholder
    color: $c-placeholder
    opacity 1
input, textarea 
  &:-ms-input-placeholder
    color: $c-placeholder
    opacity 1


label {
  display: block;
  padding-bottom: 4px;
}

input[type='checkbox'] + label,
input[type='radio'] + label {
  position: relative;
  top: -3px;
  display: inline-block;
  margin-left: 3px;
}

textarea {
    resize: none;
}

.form_line {
  margin-bottom: 20px;
  clear: both;
  position relative
  @extend $cf;
}


/*!TABLE_______________________________________ */
table 
  width: 100%
  border-spacing: 0
  background-color: #FFF
  border: 1px solid $c-form-el

tr
  border: 1px solid $c-form-el

th 
  vertical-align: middle
  font-family $f-header 
  font-size: 13px
  font-weight: 700
  text-align: left
  color: $c-cheader


th, td 
  border: 1px solid $c-form-el;
  padding: 5px;



/*!Menu style_________________________*/
/*!main_menu*/
.main_nav
  clear both
  height: 73px
  background url("../img/a_07.png") 
  background rgba(255,255,255,0.7)
  overflow hidden 
  li
    float left
    height 100%
  a
    font 21px $f-header
    display inline-block
    text-transform uppercase
    padding 28px 18px 20px
    color $c-sec
    text-decoration none
    &:hover
      color $c-hover
  .active
    a
      background-color #FFF 
      color $c-hover
.home_nav 
  a
    padding-top 22px
  .i-elem
    display block
    @extend $home
  &.active
    background-color #FFF 
    .i-elem
      @extend $home_a
  &:hover
    .i-elem
      @extend $home_a
    

/*!footer menu__________________________________*/
.footer_menu  
  width 655px
  float right
  cf()
  .h_link
    font-size 12px
    line-height 2.3em
  .active
    color #73d500 

.foot_col
  col(1/3)

.foot_menu_title
  display inline-block
  font-size 14px
  font-weight bold
  color $c-hover
  margin-bottom 10px
  &:hover
    text-decoration underline  
  
.foot_col.section_menu
  .nd_link
    font-size 14px
    font-weight bold
  li
    padding 8px 0
    border-top 1px solid $c-light-bdr
    &:first-child
      border-top 0
      padding-top 0 
      
/*! Catalog_menu_____________________________________*/
.catalog_menu_wrap
  border 1px solid $c-light-bdr
  border-width 1px 0 

.catalog_menu_list
  & > li
    width 20%
    display table-cell
    vertical-align middle
    position relative
    text-align center
    line-height 1
    border 1px solid $c-light-bdr
    border-width 0 1px
    transition 0.3s all

    & + li
      border-left none 
    &.active, &:hover
      background-color $c-main
      a
        color #fff
    &.active:before
      content " "
      triangle(10px, 6px, 'bottom', $c-main)
      position absolute
      bottom -6px
      left 50%
      margin-left -6px
      
     
  a
    color $c-main
    padding 10px 20px
    display block
    font 21px $f-header 
    

/*!Catalog product menu*/
.product_menu_wrap
  ul
    margin-left 20px
    display none
  li
    font-size 12px
  a
    display block
    border-bottom 1px solid $c-light-bdr
    padding 20px 0 10px 0 
    color $c-sec
    &:hover
      color: #73d500
      border-color #9CFE29

  & > li
    font-size 14px
    & > a
      color $c-text-d
      
  .active > a, 
  .active > .sub_menu > a
    font-weight bold 
  .active > a
    color #73d502 
    
    
  .active > ul
    display block    
      
  .sub_menu
    position relative
    &>a 
      margin-right 46px 
  .opened
    .sub_menu > a
      border-bottom 2px solid #9CFE29
      color #73d502 
    .ico_sub
      &:before
        @extend $a_m_up
      &:after
        @extend $menu_line_up
        bottom 0
      &:hover
        background-color #73d500
        &:before
          @extend $a_m_up_a
        &:after
          @extend $menu_line_up
        
      
    
  
  .ico_sub
    width 46px
    height 100%
    position absolute
    top 0
    right 0
    cursor pointer
    //z-index -1 
    transition 0.3s all  
    &:before
      content " "
      @extend .i-elem
      @extend $a_down
      position absolute
      right 14px
      bottom 16px
    &:after
      content ""
      @extend .i-elem
      @extend $menu_line_down
      position absolute
      bottom -5px
      right 0
      z-index 100
    &:hover
      background-color #b1d2d7
      &:before
        @extend $a_m_down_a
      &:after
        background-position -56px -211px
    
      
      
/*  a.harFull:hover
    color $c-text-d
    border-color $c-light-bdr*/
  
  .harFull > .ico_sub:hover
    background-color #89b3b9
    &:before
      @extend $a_m_down_a 
      
  .harOpen:hover > .ico_sub
    background-color #73d500
    &:before
      @extend $a_m_up_a
      
  .harOpen > .ico_sub
    &:before
      @extend $a_m_up
      
  .harFull
    &:after
      content " "
      @extend .i-elem
      @extend $menu_line_down
      
  .harOpen
    &:after
      @extend $menu_line_up
    border-bottom 2px solid #9CFE29
      
  .harOpen.harFull:after
    bottom -2px 
    
  .discount
    &:before
      content " "
      @extend .i-elem
      @extend $promo
      position absolute
      top 0
      right 0
      z-index -1
    &:hover, &.active
      color #e84e32
      border-color #ffd6cf
        
/*!Layout______________________________*/
@font-face {
  font-family: 'bebas_neue';
  src: url('../font/bebasneuecyrillic.eot');
  src: url('../font/bebasneuecyrillic.eot?#iefix') format('embedded-opentype'), url('../font/bebasneuecyrillic.woff') format('woff'), url('../font/bebasneuecyrillic.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
  }


body
  background #fff
  min-width 1000px

.page_wrap
  footer_stick(165px)
  background url("../img/bg_main.jpg") top center no-repeat
  
.page_wrap.in_page
  background url("../img/bg_page.jpg") top center no-repeat 

.container
  center(1372px)
  min-width 1000px
  cf()

.container-s
  center(1000px)
  min-width 1000px 
  cf()
  
  //min-width 960px 
.pad
  margin-bottom 40px
  cf() 
  
.ta_l
  text-align left

.nd_link
  color $c-link
  &:hover
    color $c-hover-m 
    text-decoration underline
    
.h_link
  color $c-text
  &:hover
    color $c-hover-m 
    text-decoration underline
    
.wys_link
  color $c-link
  text-decoration underline
  &:hover
    color: $c-hover-m
  
  
.top_page
  margin 10px 0 20px 
  padding 12px 0
  border-top 1px solid transparent 
  background-color #FFF 
  float left
  cvvf()
  width 100%
  
.article_wrap
  @extend $wysiwyg
  
.content
  cf()
  
/*!Header_______________________________________*/
  
.logo
  float left

.top_page_col
  float right
  
.search_main
  display inline-block
  vertical-align middle
  position relative 
  margin-right 40px
  width 220px 
  input[type="search"]
    padding-right 35px
    border-radius 2em 
  
.search_btn
  position absolute
  top 7px
  right 9px
  
.contact_top
  display inline-block
  vertical-align middle
  
.social_ico
  background-image url("../img/social.png")
  background-repeat no-repeat
  display inline-block
  cursor pointer
  
.contact_top
  text-align center
  .social_ico
    margin-left 10px
    &:first-child
      margin-left 0
  .mail
    margin-top 5px
    display inline-block
    &:hover
      color $c-hover
      text-decoration underline
      
.contact_btn
  display inline-block
  vertical-align middle
  margin-right 15px
  background-color: $c-main
  padding 10px 20px
  width 150px
  display inline-block
  border-radius 3em
  font-family $f-header
  text-transform uppercase
  font-size 18px
  color #fff
  .i-elem
    display block
    float left
    margin 5px 10px 0 0
    @extend $zapros
  &:hover
    background-color $c-hover 
    color #fff
    text-decoration none     
  

.tw
  @extend $tw
  &:hover
    @extend $tw_a
.youtube
  @extend $youtube
  &:hover
    @extend $youtube_a  
.inst
  @extend $inst
  &:hover
    @extend $inst_a


.main_nav_wrap
  max-width 1372px
  min-width 1000px
  margin 0 auto 10px

.in_page
  
  .main_nav_wrap
    max-width 1000px
    width 1000px 
    
.index_promo
  margin-bottom 120px
.slide_main_wrap
  col(16/24, gutter: 2) 
.progect_park_link
  col(8/24, gutter: 2) 
    
.main_col
  float left
  width 700px
  margin-right 40px
  
 
.side_col
  float right
  width 260px
  

.section_header, 
.section_header a
  text-transform uppercase
  font 30px $f-header
  margin-bottom 40px
  color $c-hover
    
.section_header a
  color $c-hover
  &:hover
    text-decoration none
    color $c-hover-m

.brand_gall_item
  display inline-block
  vertical-align middle
  margin-right 40px
  img 
    transition 0.3s all
  &:hover
    img
      transform scale(1.2)
      

.rss_banner
  background-image linear-gradient(to left, #eff5e1, #a1e9fe)
  filter 'progid:DXImageTransform.Microsoft.Gradient(GradientType=1, StartColorstr=%s, EndColorstr=%s)' % (#a1e9fe #eff5e1)

.rss_text
  width 310px
  height 125px
  margin 2px 0 
  padding 10px 20px
  box-sizing border-box
  position relative
  float left
  margin-right 40px
  background-color #FFF 
  &:after
    content " "
    triangle(30px, 125px, 'right', #fff)
    position absolute
    right -30px
    top 0
  .header
    color #94db41
    font 30px $f-header
    text-transform uppercase
    margin-bottom 5px
  p 
    font-size 12px
    line-height 1.5
    
.rss_banner_form
  float right
  width 620px
  .form_line
    margin-top 40px
  input[type="email"]
    background-color #FFF
    border-radius 2em
    padding 10px 180px 10px 20px
    height 43px
    font 18px $f-header
    &::-webkit-input-placeholder
      color $c-main
    &:-moz-placeholder
      color $c-main
    &::-moz-placeholder
      color $c-main
    &:-ms-input-placeholder
      color $c-main
  input[type="submit"]
    position absolute
    top 0
    right -2px
    height 43px
    
.footer_page
  background-color #FFF 
         
.footer_about
  font-size 11px
  float left
  li
    margin-bottom 20px 
    
  
#up_btn
  font 24px $f-header
  color $c-main
  display none
  text-decoration none
  text-transform uppercase
  position fixed
  right 50px
  bottom 400px
  z-index 500
  cursor pointer
  &:before
    content " "
    margin-right 10px 
    @extend .i-elem
    @extend $up
  &:hover
    color $c-hover
    &:before
      @extend $up_a
  @media (max-width: 1200px)
    width 35px
    height 35px
    overflow hidden
    right 5px
  @media (max-width: 1000px)
    display none
    
.page_sec_title
  font 40px $f-header
  text-transform uppercase
  color #FFF
  margin 20px 0 60px  
   
.breadcrumbs
  list-style none
  margin-bottom 60px
  li
    float left
    font-size 12px
  
.product_menu_wrap
  col(3/12) 

.catalog_content
  col(9/12)

.col3
  col(1/3, 0, 3)


.content_project
 col(8/12)

.side_project
  col(4/12)     
    


        
